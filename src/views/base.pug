        link(rel="stylesheet", href="/assets/css/styles.css")
    body
        header.header__logo
            a(href="/")
                i.fab.fa-youtube
                span Youtube
            nav 
                ul 
                    li 
                        a(href="/search")
                            i.fas.fa-search
                    if loggedIn
                        li 
                            a(href="/videos/upload") Upload Video
                        li 
                            a(href="/users/edit") Edit Profile0
                        li
                            a(href="/users/logout") logout
                        li 
                            a(href=`/users/${loggedInUser._id}`)
                                if loggedInUser.avatarUrl === ""
                                    span ğŸ˜Š
                                else
                                    img(src="/" + loggedInUser.avatarUrl).header__avatar
                    else
                        li 
                            a(href="/join") join
                        li 
                            a(href="/login").header__btn login
        main
            block content
        include partials/footer
