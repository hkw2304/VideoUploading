extends base.pug
//- 모든 input 꼭 name값을 주자
block content 
    if(errorMessage)
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="Title", required, type="text",name="title", maxlength=20)
        input(placeholder="Description", required, type="text",name="description", minlength=5)
        input(placeholder="Hashtags, separated by comma.", required, type="text",name="hashtags")
        input(type="submit", value="upload Video")